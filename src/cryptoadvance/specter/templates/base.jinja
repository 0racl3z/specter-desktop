<!DOCTYPE html>
<html>
	<head>
		<link rel="shortcut icon" type="image/png" href="/static/img/icon.png"/>
		<title>Specter Desktop</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" type="text/css" href="/static/styles.css?{{rand}}">
	</head>
	<body>
	{% if specter.config.auth == "none" or current_user.is_authenticated %}
		{% include "includes/overlay/overlay.html" %}
		{% include "includes/qr-code.html" %}
	{% endif %}
	<div class="row holder">
		{% block sidebar %}
			{% include "includes/sidebar/sidebar.jinja" %}
		{% endblock %}
		<main>		
			{% if specter.config.auth != "none" and current_user.is_authenticated and not hwi_bridge %}
				<a class="logout" href="{{ url_for('logout') }}">
					<img src="/static/img/exit_from_app-24px.svg" style="width: 24px;"/><div>Logout</div>
				</a>
			{% else %}
				<div><br><br></div>
			{% endif %}
			<img id="menubtn" src="/static/img/menu.svg"/>

			{% with messages = get_flashed_messages() %}
				{% if messages %}
					<div class="notification error">
						<ul>
						{% for message in messages | unique %}
							<li>{{ message }}</li>
						{% endfor %}
						</ul>
					</div>
				{% endif %}
			{% endwith %}
			{% if error %}
				<div class="notification error">
					ERROR: {{error}}
				</div>
			{% endif %}

			<div class="notification error hidden" id="notificationmsg" style="z-index: 999;">
				Error
			</div>

			{% block main %}
				{% if error %}
					<br><br>Something went wrong :(<br><br>{{error}}
				{% else %}
					<br><br>Nothing here
				{% endif %}
			{% endblock %}
		</main>
	</div>

	<script type="text/javascript">
		window.addEventListener('load', (event) => {
			let main = document.getElementsByTagName("main")[0];
			main.addEventListener('click', (event) => {
				document.getElementById("side-content").classList.remove("active");
			});
			let menubtn = document.getElementById("menubtn");
			menubtn.addEventListener('click', (event) => {
				document.getElementById("side-content").classList.add("active");
				event.stopPropagation();
			});
		});

		function showError(msg, timeout=0) {
			notify(msg, timeout, "error");
		}
		function notify(msg, timeout=0, cls="primary") {
			let el = document.getElementById("notificationmsg");
			el.style.opacity = 0;
			el.classList.remove("error");
			el.classList.remove("primary");
			el.classList.add(cls);
			el.innerHTML = msg;
			el.style.display = "block";
			el.style["animation-name"]="appear";
			el.style.opacity = 1;
			if(timeout > 0){
				window.setTimeout(()=>{
					el.style.opacity = 0;
					el.style["animation-name"]="disappear";
					window.setTimeout(()=>{
						el.style.display = "none";
						el.innerHTML = "Nothing...";
					}, 200);
				},timeout);
			}
		}

		function copyText(value, msg) {
			try {
				var element = document.createElement("p");
				document.getElementsByTagName("body")[0].appendChild(element);
				element.textContent = value
				var selection = document.getSelection();
				var range = document.createRange();
				range.selectNode(element);
				selection.removeAllRanges();
				selection.addRange(range);
				document.execCommand("copy");
				selection.removeAllRanges();
				document.getElementsByTagName("body")[0].removeChild(element);
				notify(msg, 3000);
			}
			catch (err) {
				showError('Unable to copy text', 3000);
			}
		}
	</script>

	{% block scripts %}
	{% endblock %}
	</body>
</html>
